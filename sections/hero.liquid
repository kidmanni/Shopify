<section class="grid text-white">
    <div>
        <div class="text-center flex flex-col justify-between items-center my-10 mx-5">
            <h1 class="text-2xl text-gray-700 pt-5 font-semibold font-crimson xl:text-5xl">{{ section.settings.title }} </h1>
            <div class="text-xl text-gray-700 xl:text-2xl my-10">{{ section.settings.description }}</div>
            <button
                class="w-44 text-center bg-button-action font-crimson shadow-lg font-semibold py-2 px-4 transform hover:scale-110 duration-700 ease-in-out xl:text-xl 2xl:text-2xl">
                <a href="{{ section.settings.button_link }}" class="">{{ section.settings.button_label }}</a>
            </button>
        </div>
        <div class="w-3/4 flex flex-col mx-auto mt-10 xl:flex-row xl:w-2/4">
            {% for product in collections[section.settings.featured_collection].products %}
            {% assign image = product.featured_media.preview_image %}
            {% endfor %}
            <div class="">
                {% if section.settings.image != blank %}
                <a href="{{ section.settings.promo_main }}" class="">
                   <img class="bg-cover mx-auto"
                    src="{{ section.settings.image | product_img_url: '700x850', crop: 'center'  }}"
                    alt="{{ section.settings.image.alt }} "> 
                </a>            
                {% else %}
                {% capture current %}{% cycle 1,2 %}{% endcapture %}
                {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
                {% endif %}   
            </div>
            <div class="grid grid-cols-2 mx-auto xl:flex xl:flex-col">
                <div class="shadow">
                    <a href="{{ section.settings.promo_product1 }}" class="">
                        <img class=""
                            src="{{ section.settings.image_left | product_img_url: '350x350', crop: 'center'  }}"
                            alt="{{ section.settings.image.alt }} ">
                    </a>
                </div>
                <div class="shadow">
                    <a href="{{ section.settings.promo_product2 }}" class="">
                       <img class="" src="{{ section.settings.image_right | product_img_url: '350x350', crop: 'center'  }}"
                        alt="{{ section.settings.image.alt }} "> 
                    </a>                    
                </div>
            </div>    
        </div>
    </div>    
</section>
{% schema %}
{
"name": "Hero",
"class": "hero-section",
"settings": [
{
"type": "image_picker",
"id": "image",
"label": "Hero Promo Item"
},
{
"type": "image_picker",
"id": "image_left",
"label": "Heading Background Title"
},
{
"type": "image_picker",
"id": "image_right",
"label": "Heading Background Title"
},
{
"type": "text",
"id": "title",
"default": "Example Heading",
"label": "Heading Title"
},
{
"type": "richtext",
"id": "description",
"default": "<p>Example Paragraph</p>",
"label": "Heading Description"
},
{
"type": "text",
"id": "button_label",
"default": "Button",
"label": "Heading Button Label"
},
{
"type": "url",
"id": "button_link",
"label": "Heading Button Link"
},
{
"type": "text",
"id": "custom_label",
"default": "Button",
"label": "Custom Button Label"
},
{
"type": "url",
"id": "custom_link",
"label": "Custom Button Link"
},
{
    "type": "url",
    "id": "promo_main",
    "label": "Promo Main"
    },
{
"type": "url",
"id": "promo_product1",
"label": "Promo 1"
},
{
"type": "url",
"id": "promo_product2",
"label": "Promo 2"
}

],
"presets": [
{
"category": "Hero",
"name":"Simple Hero"
}
]
}
{% endschema %}