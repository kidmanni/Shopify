"default": "Example Heading",
"label": "Heading Title"
},
{
"type": "richtext",
"id": "description",
"default": "<p>Example Paragraph</p>",
"label": "Heading Description"
},
{
"type": "text",
"id": "button_label",
"default": "Button",
"label": "Heading Button Label"
},
{
"type": "url",
"id": "button_link",
"label": "Heading Button Link"
},
{
"type": "text",
"id": "custom_label",
"default": "Button",
"label": "Custom Button Label"
},
{
"type": "url",
"id": "custom_link",
"label": "Custom Button Link"
}
],
"presets": [
{
"category": "Hero",
"name":"Simple Hero"
}
]
}
{% endschema %}