<div class="bg-menu-red-custom">
    {% if section.settings.image != blank %}
    <img class="" src="{{ section.settings.image | product_img_url: '300x300', crop: 'top'  }}" alt="{{ section.settings.image.alt }} ">
{% else %}
    {% capture current %}{% cycle 1,2 %}{% endcapture %}
    {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
    
{% endif %}
{% if section.settings.image != blank %}
    <img class="" src="{{ section.settings.image | product_img_url: '300x300', crop: 'top'  }}" alt="{{ section.settings.image.alt }} ">
{% else %}
    {% capture current %}{% cycle 1,2 %}{% endcapture %}
    {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
    
{% endif %}
</div>



{% schema %}
{
    "name": "Hero",
    "class": "hero-section",
    "settings": [
        {
            "type": "image_picker",
            "id": "image",
            "label": "Heading Background Title" 
        },
        {
            "type": "text",
            "id": "title",
            "default": "Example Heading",
            "label": "Heading Title" 
        },
        {
            "type": "richtext",
            "id": "description",
            "default": "<p>Example Paragraph</p>",
            "label": "Heading Description" 
        },
        {
            "type": "text",
            "id": "button_label",
            "default": "Button",
            "label": "Heading Button Label" 
        },
        {
            "type": "url",
            "id": "button_link",
            "label": "Heading Button Link" 
        }
    ],
    "presets": [
        {
            "category": "Hero",
            "name":"Simple Hero"
        }
    ]
}
{% endschema %}